<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/statusBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular"
        android:progressTint="@android:color/holo_red_light"
        android:secondaryProgress="100"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="108dp" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/whitecircle"
        android:contentDescription="Status" />

    <TextView

        android:id="@+id/statusBarText"
        android:layout_width="150dp"

        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="100"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/aclonica"
        android:text="Score"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_Score"
        android:layout_alignBottom="@+id/txt_Score"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/txt_Score"
        android:fontFamily="@font/aclonica"
        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_AverageScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_ScoreValue"
        android:layout_alignBottom="@+id/txt_ScoreValue"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/txt_AverageScoreValue"
        android:fontFamily="@font/aclonica"
        android:text="Average Score"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_AverageScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txt_AverageScore"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/aclonica"
        android:text="100"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>